<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adreçaNom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textAlignment="center"
            android:gravity="center"
            android:text="adreçaNom" />
        <TextView
            android:id="@+id/descripcio"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textAlignment="center"
            android:gravity="center"
            android:text="descripcio" />
        <TextView
            android:id="@+id/grupoadreçaadreça"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textAlignment="center"
            android:gravity="center"
            android:text="grupadreçaadreça" />
        <TextView
            android:id="@+id/grupoadreçacodigopostal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textAlignment="center"
            android:gravity="center"
            android:text="grupadreçacodigopostal" />
        <TextView
            android:id="@+id/grupoadreçamunicipinom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textAlignment="center"
            android:gravity="center"
            android:text="grupadreçamunicipinom" />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textAlignment="center"
            android:gravity="center"
            android:text="email" />
        <TextView
            android:id="@+id/telefonocontacto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textAlignment="center"
            android:gravity="center"
            android:text="telefonocontacto" />

        <ImageView
            android:id="@+id/municipiEscut"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/municipiBandera"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>